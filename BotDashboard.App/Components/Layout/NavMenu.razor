@implements IDisposable

@inject NavigationManager NavigationManager

<MudPaper Style="background-color: #080E2C;" Elevation="0">
    <MudNavMenu Bordered="true" Rounded="true" Margin="Margin.Normal" Color="Color.Tertiary" Class="text-white pa-2">
        <MudImage class="mt-2 ml-8" Width="150" Height="75" Src="imgs\Bot Harbor - Landscape.png"
                  Alt="FSL Investing"></MudImage>
        <MudDivider Class="my-3"/>
        <MudNavLink IconColor="Color.Tertiary" Class="mud-link-item" Icon="@Icons.Material.Filled.Dashboard" Href=""
                    Match="NavLinkMatch.All">Dashboard
        </MudNavLink>
        <MudNavLink IconColor="Color.Tertiary" Class="mud-link-item" Icon="@Icons.Material.Filled.KeyboardCommandKey" Href="commands"
                    Match="NavLinkMatch.Prefix">Commands
        </MudNavLink>
        <MudNavLink IconColor="Color.Tertiary" Class="mud-link-item" Icon="@Icons.Material.Filled.QueryStats"
                    Href="stats" Match="NavLinkMatch.Prefix">Stats
        </MudNavLink>
        <MudDivider Class="my-3"/>
        <MudNavGroup IconColor="Color.Tertiary" Icon="@Icons.Material.Filled.Settings" Title="Settings" Expanded="true">
            <MudNavLink IconColor="Color.Tertiary" Class="mud-link-item" Icon="@Icons.Material.Filled.Password"
                        Href="/account/manage/changepassword" Match="NavLinkMatch.Prefix">Manage Password
            </MudNavLink>
        </MudNavGroup>
    </MudNavMenu>
</MudPaper>

<style>
    .mud-link-item :hover {
        color: #ffffff !important;
        font-weight: bold;
    }
</style>

@code {
    private string CurrentUrl { get; set; }

    protected override void OnInitialized()
    {
        CurrentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        CurrentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

}