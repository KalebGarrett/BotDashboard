@page "/"
@using BotDashboard.App.Constants

<PageTitle>Dashboard</PageTitle>

<div class="container-fluid logo-container text-white d-flex align-items-center justify-content-center">
    <img src="imgs/Bot Harbot - Logo Resized.png" alt="Bot Harbor Logo" class="img-fluid"/>
</div>
<b>
    <h2 class="text-white mt-4">
        <i class="bi bi-box-seam"></i>
        Containers Running
    </h2>
</b>

<div class="row">
    @if (Containers.Count == 0)
    {
        <p class="lead text-white">There are no containers currently running...</p>
    }
    @foreach (var container in Containers.OrderBy(x => x.Image))
    {
        <div class="col-md-4 mb-4">
            <div class="card container-card">
                <div class="position-relative">
                    <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                        <div class="mt-2 ms-3">
                            <img src="https://cdn.iconscout.com/icon/free/png-256/free-discord-4062811-3357697.png?f=webp"
                                 width="50" height="50" alt="@container.Image"/>
                        </div>
                        <a href="#!">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15)"></div>
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title lead">@container.Image.ToUpper()</h5>
                        <p class="card-text mt-4" style="color: #707a91">Container Id: @container.ContainerId</p>
                        <p class="card-text" style="color: #707a91">Created: @container.Created</p>
                        <p class="card-text" style="color: #707a91">Status: @container.Status</p>
                    </div>
                </div>
                <div class="form-check form-switch position-absolute form-check-position">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" @onclick="() => StopImage(container.ContainerId)" checked>
                </div>
            </div>
        </div>
    }
</div>
<p class="text-white">Last Fetched @Time</p>

<hr/>
<b>
    <h2 class="text-white mt-2"><i class="bi bi-command"></i> Commands</h2>
</b>

<div class="mb-4">
    <div class="row">
        <div class="col-md-6 p-3 command-btn-container">
            <button class="btn btn-dark rounded-pill list-containers-btn p-3" @onclick="ListContainers">
                <i class="bi bi-list"></i>
                List Containers
            </button>
            <!-- Add get stats btn for Ubuntu memory usage data -->
            <button class="btn btn-dark rounded-pill list-containers-btn p-3">
                <i class="bi bi-activity"></i>
                Get Stats
            </button>
            <button class="btn btn-dark rounded-pill list-containers-btn p-3" @onclick="() => RunImage(DockerImages.JokeBot)">
                <i class="bi bi-robot"></i>
                Start @DockerImages.JokeBot
            </button>
            <button class="btn btn-dark rounded-pill list-containers-btn p-3" @onclick="() => RunImage(DockerImages.TriviaBot)">
                <i class="bi bi-robot"></i>
                Start @DockerImages.TriviaBot
            </button>
            <button class="btn btn-dark rounded-pill list-containers-btn p-3" @onclick="() => RunImage(DockerImages.FactBot)">
                <i class="bi bi-robot"></i>
                Start @DockerImages.FactBot
            </button>
            <button class="btn btn-dark rounded-pill list-containers-btn p-3" @onclick="() => RunImage(DockerImages.PremBot)">
                <i class="bi bi-robot"></i>
                Start @DockerImages.PremBot
            </button>
            <button class="btn btn-dark rounded-pill list-containers-btn p-3" @onclick="() => RunImage(DockerImages.JamJunction)">
                <i class="bi bi-robot"></i>
                Start @DockerImages.JamJunction
            </button>
            <button class="btn btn-dark rounded-pill list-containers-btn p-3" @onclick="RestartAllImages">
                <i class="bi bi-arrow-clockwise"></i>
                Restart All Containers
            </button>
            <button class="btn btn-dark rounded-pill list-containers-btn p-3" @onclick="StopAllImages">
                <i class="bi bi-stop-fill"></i>
                Stop All Containers
            </button>
        </div>
        <div class="col-md-6">
            <!-- Add pie chart for displaying memory -->
        </div>
    </div>
</div>